    <!-- Input field dimensions -->
    <dimen name="input_field_height">56dp</dimen>
    <dimen name="input_field_corner_radius">4dp</dimen>
    
    <!-- Dialog dimensions -->
    <dimen name="dialog_corner_radius">8dp</dimen>
    <dimen name="dialog_padding">24dp</dimen>
    
    <!-- Image dimensions -->
    <dimen name="image_thumbnail_size">80dp</dimen>
    <dimen name="image_preview_size">200dp</dimen>
    
    <!-- Progress indicator dimensions -->
    <dimen name="progress_indicator_size">48dp</dimen>
    <dimen name="progress_indicator_stroke_width">4dp</dimen>
</resources>
